{
    "name": "devtheorem/handlebars.php",
    "description": "Parse and render Handlebars templates with PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Theodore Brown",
            "email": "theodorejb@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "ircmaxell/php-yacc": "dev-master",
        "jbboehr/handlebars-spec": "dev-master",
        "phpstan/phpstan": "^2.1.14",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "DevTheorem\\Handlebars\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevTheorem\\Handlebars\\Test\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze",
        "test": "vendor/bin/phpunit tests"
    },
    "config": {
        "sort-packages": true
    }
}
