{
    "name": "devtheorem/php-handlebars-parser",
    "description": "Parse Handlebars templates to a spec-compliant AST with PHP.",
    "keywords": [
        "Handlebars",
        "PHP",
        "template",
        "parse",
        "AST"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Theodore Brown",
            "email": "theodorejb@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "ircmaxell/php-yacc": "dev-master",
        "jbboehr/handlebars-spec": "dev-master",
        "phpstan/phpstan": "^2.1.22",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "DevTheorem\\HandlebarsParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevTheorem\\HandlebarsParser\\Test\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze",
        "cs-fix": "php-cs-fixer fix -v",
        "test": "vendor/bin/phpunit tests"
    },
    "config": {
        "sort-packages": true
    }
}
